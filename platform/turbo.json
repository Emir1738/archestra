{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "lint": {
      "inputs": ["**/src/**/*.tsx", "**/src/**/*.ts"]
    },
    "type-check": {
      "inputs": ["**/src/**/*.tsx", "**/src/**/*.ts"]
    }
  }
}
